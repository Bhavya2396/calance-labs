function PredictiveAnalyticsDemo() {
  const companyData = useStore((state) => state.companyData)
  const [query, setQuery] = useState('')
  const [loading, setLoading] = useState(false)
  const [result, setResult] = useState<AnalyticsResult | null>(null)

  const defaultQuery = companyData
    ? `Forecast growth for ${companyData.company}`
    : 'Analyze trends and predict next quarter'

  const sampleData = {
    labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun'],
    values: [42, 48, 45, 62, 58, 71],
  }

  const runAnalysis = async () => {
    const queryToRun = query.trim() || defaultQuery
    setLoading(true)
    setResult(null)

    const analysisResult = await analyzeData(
      queryToRun,
      companyData ? { company: companyData.company, industry: companyData.industry } : undefined
    )

    setResult(analysisResult)
    setLoading(false)
  }

  return (
    <div className="p-6 space-y-6">
      {/* Header */}
      <div className="text-center mb-8">
        <h3 className="text-2xl font-light text-white mb-2">See the Future</h3>
        <p className="text-white/60">AI-powered forecasting and insights</p>
      </div>

      {/* Query Input */}
      <div className="flex gap-3">
        <input
          value={query}
          onChange={(e) => setQuery(e.target.value)}
          placeholder={defaultQuery}
          disabled={loading}
          className="flex-1 px-4 py-3 bg-white/5 border border-white/10 text-white placeholder-white/40
                     focus:outline-none focus:border-orange-500/50 rounded-xl transition-colors"
        />
        <button
          onClick={runAnalysis}
          disabled={loading}
          className="px-8 py-3 bg-gradient-to-r from-orange-500 to-amber-500 text-white rounded-xl
                     disabled:opacity-50 disabled:cursor-not-allowed hover:from-orange-400 hover:to-amber-400
                     transition-all shadow-lg shadow-orange-500/25"
        >
          {loading ? 'Analyzing...' : 'Analyze'}
        </button>
      </div>

      {/* Chart */}
      <div className="bg-white/5 border border-white/10 rounded-xl p-6">
        <div className="text-xs font-mono text-white/40 mb-6">TREND VISUALIZATION</div>
        <div className="flex items-end justify-between gap-3 h-48">
          {sampleData.values.map((value, i) => (
            <div key={i} className="flex-1 flex flex-col items-center gap-3">
              <motion.div
                className="w-full rounded-t-lg bg-gradient-to-t from-orange-500 via-orange-400 to-amber-400"
                initial={{ height: 0 }}
                animate={{ height: `${(value / Math.max(...sampleData.values)) * 100}%` }}
                transition={{ delay: loading ? 0 : i * 0.1, duration: 0.6, ease: 'easeOut' }}
              />
              <span className="text-xs text-white/40 font-mono">{sampleData.labels[i]}</span>
            </div>
          ))}
        </div>
      </div>

      {/* Results */}
      {result && (
        <motion.div
          initial={{ opacity: 0, y: 20 }}
          animate={{ opacity: 1, y: 0 }}
          className="space-y-4"
        >
          <div className="grid md:grid-cols-2 gap-4">
            <div className="bg-white/5 border border-white/10 rounded-xl p-4">
              <div className="text-xs font-mono text-white/40 mb-3">KEY INSIGHTS</div>
              <ul className="space-y-2">
                {result.insights.map((insight, i) => (
                  <li key={i} className="text-sm text-white/80 flex items-start gap-2">
                    <span className="w-1.5 h-1.5 bg-orange-400 rounded-full mt-1.5 shrink-0" />
                    {insight}
                  </li>
                ))}
              </ul>
            </div>
            
            <div className="bg-white/5 border border-white/10 rounded-xl p-4">
              <div className="text-xs font-mono text-white/40 mb-3">TRENDS</div>
              <ul className="space-y-2">
                {result.trends.map((trend, i) => (
                  <li key={i} className="text-sm text-white/80 flex items-start gap-2">
                    <span className="text-green-400">â†—</span>
